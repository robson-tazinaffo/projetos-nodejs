<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Titulo">Titulo</label>
  <div class="col-sm-8">
    <input readonly class="form-control" id="Titulo" value="<%= model.Titulo %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Auteur">Autor</label>
  <div class="col-sm-7">
    <input readonly class="form-control" id="Auteur" value="<%= model.Auteur %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Comentarios">Comentarios</label>
  <div class="col-sm-10">
    <textarea readonly class="form-control" cols="20" id="Comentarios" maxlength="32000"
      rows="7"><%= model.Comentarios %></textarea>
  </div>
</div>