<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Titulo">Titulo</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="Titulo" value="<%= model.Titulo %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Auteur">Autor</label>
  <div class="col-sm-7">
    <input class="form-control" name="Auteur" value="<%= model.Auteur %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Comentarios">Comentario</label>
  <div class="col-sm-10">
    <textarea class="form-control" cols="20" name="Comentarios" maxlength="32000"
      rows="7"><%= model.Comentarios %></textarea>
  </div>
</div>