<%- include("_header") -%>

  <h1>Lista de livros (<%= model.length %>)</h1>

  <div class="table-responsive-sm">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Autor</th>
          <th>Comentarios</th>
          <th class="d-print-none">
            <a class="btn btn-sm btn-success" href="/create">Inserir</a>
          </th>
        </tr>
      </thead>
      <tbody>
        <% for (const book of model) { %>
          <tr>
            <td>
              <%= book.Titulo %>
            </td>
            <td>
              <%= book.Autor %>
            </td>
            <td>
              <%= book.Comentarios %>
            </td>
            <td class="d-print-none">
              <a class="btn btn-sm btn-warning" href="/edit/<%= book.Livre_ID %>">Alterar</a>
              <a class="btn btn-sm btn-danger" href="/delete/<%= book.Livre_ID %>">Excluir</a>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>

  <%- include("_footer") -%>